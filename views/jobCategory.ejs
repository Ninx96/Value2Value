<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head') %>

  <body class="gray">
    <!-- Wrapper -->
    <div id="wrapper">
      <%- include('./components/header') %>

      <!-- Dashboard Container -->
      <div class="dashboard-container">
        <!-- Dashboard Content
	================================================== -->
        <div class="dashboard-content-container" data-simplebar>
          <div class="dashboard-content-inner">
            <!-- Dashboard Headline -->
            <div class="dashboard-headline col-xl-6 offset-xl-3">
              <h3>Tell us about your project</h3>

              <!-- Breadcrumbs -->
              <nav id="breadcrumbs" class="dark">
                <ul>
                  <li><a href="#">Home</a></li>
                  <li><a href="#">Dashboard</a></li>
                  <li>Post a Job</li>
                </ul>
              </nav>
            </div>

            <!-- Row -->
            <div class="row">
              <!-- Dashboard Box -->
              <div class="col-xl-6 offset-xl-3">
                <div class="dashboard-box margin-top-0">
                  <!-- Headline -->
                  <div class="headline">
                    <h3>
                      <i class="icon-feather-folder-plus"></i> Job Submission
                      Form
                    </h3>
                  </div>

                  <div class="content with-padding padding-bottom-10">
                    <form>
                      <!-- Job title -->
                      <div class="row">
                        <div class="col-xl-12">
                          <div class="submit-field">
                            <h5>Functional area</h5>
                            <select
                              class="selectpicker with-border"
                              data-size="7"
                              title="Choose a Functional area"
                            >
                              <option>
                                Accounting / Tax / Company Secretary / Audit
                              </option>
                              <option>Agent</option>
                              <option>
                                Medical Professional / Healthcare Practitioner /
                                Technician
                              </option>
                              <option>HR / Admin / PM / IR / Training</option>
                              <option>Valuation</option>
                            </select>
                          </div>
                        </div>
                      </div>

                      <!-- Form End -->
                    </form>
                  </div>
                </div>
                <div id="btn_skill" class="col-xl-12">
                  <a href="#" class="button ripple-effect big margin-top-25"
                    >Next</a
                  >
                </div>
              </div>
            </div>
            <!-- Row / End -->

            <%- include('./components/footerDashboard') %>
          </div>
        </div>
        <!-- Dashboard Content / End -->
      </div>
      <!-- Dashboard Container / End -->
    </div>
    <!-- Wrapper / End -->

    <%- include('./components/scripts') %>

    <script>
      $(document).ready(function () {
        $("#btn_job").on("click", function (event) {
          $("#div_skill").removeClass("mfp-hide");
          $("#btn_job").addClass("mfp-hide");
        });

        $("#btn_skill").on("click", function (event) {
          $("#div_criteria").removeClass("mfp-hide");
          $("#btn_skill").addClass("mfp-hide");
        });

        $("#btn_criteria").on("click", function (event) {
          $("#div_payment").removeClass("mfp-hide");
          $("#btn_criteria").addClass("mfp-hide");
        });

        $("#rad_payment").on("click", function (event) {
          const value = event.target.value;
          if (value == "fixed") {
            $("#div_fixed").removeClass("mfp-hide");
            $("#div_hourly").addClass("mfp-hide");
            return;
          }
          if (value == "hourly") {
            $("#div_hourly").removeClass("mfp-hide");
            $("#div_fixed").addClass("mfp-hide");
            return;
          }
        });
      });
    </script>
  </body>
</html>
